        }
        #form-step-5 .checkcontainer,#form-step-5 .checkcontainer a {
            font-size: 1em !important;
        }
        #form-step-5 .super-panel {
            border-radius: 6px;
            background-color: white;
            box-shadow: 6px 12px 12px 0 #dedede;
            padding: 1.5em;
            margin: 1em 0 0 0 !important;
        }
        #form-step-5 .btn {
            float: right;
            margin: 0;
        }
        #form-step-5 .btn.btn-continue {
