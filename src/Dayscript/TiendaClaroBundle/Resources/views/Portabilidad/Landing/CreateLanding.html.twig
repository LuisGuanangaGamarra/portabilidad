            padding-left: 5px;
        }
        a.select-servicio.selected, a.select-servicio:hover {
            color: #0095a0;
        }
        a.select-servicio.selected img, a.select-servicio .img-responsive:hover {
            border: solid 1px #0095a0;
        }

        label.checkcontainer span:not(.customCheck) {
            color: #ADADAD;
        }
        label.checkcontainer input:checked ~ span:not(.customCheck), a.show-all-planes, a.show-min-planes {
            color: #0095a0;
        }
        label.checkcontainer .customCheck {
            border-radius: 3px;
        }
        @media (min-width: 767px) {
