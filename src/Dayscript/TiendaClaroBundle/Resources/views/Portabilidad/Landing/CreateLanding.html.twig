        }
        #form-step-5 .btn.btn-flat {
            margin-right: 0.5em !important;
            color:#212121;
            padding: 0.5em 1.5em;
        }
        @media (max-width: 767px) {
            .nav-tabs li a {
                font-size: 0.95em;
            }
            p.no-margin {
                margin: 0 !important;
            }
            #form-step-5 .btn {
                width: 46% !important;
            }
            #form-step-5 .btn.btn-continue {
                margin-left: 4% !important;
            }
            #form-step-5 .btn.btn-flat {
                margin-right: 4% !important;
            }
        }
        @media (min-width: 768px) and (max-width: 800px) {
            .catalog-planes .header-item-catalog:not(.con-etiquetas) {
                height: 123px;
            }
        }
        @media (min-width: 1200px) and (max-width: 1399px) {
            .content-catalog > div {
                flex-basis: 31%;
                margin: 1%;
            }
        }
        @media (min-width: 1400px) {
            .content-catalog > div {
                flex-basis: 23%;
                margin: 1%;
            }
            .catalog-planes .header-item-catalog:not(.con-etiquetas) {
                height: 123px;
            }
            .col-xl-3 {
                width: 25% !important;
            }
        }

        .customCheck{
            position: relative;
            height: unset;
            width: unset;
        }

        #signature-pad-redesign .buttons-pad {
            position: absolute;
            bottom: 40px;
            right: 40px;
        }

        #signature-pad-redesign canvas {
            height: 20em;
            background-color: #fff;
        }

        #signature-pad-redesign .buttons-pad a {
            padding: 10px;
            border-radius: 50px;
            opacity: .7;
        }

        #signature-pad-redesign .buttons-pad a.trash {
            border: 1px solid #888;
            color: #888;
            margin-right: 10px;
        }

        #signature-pad-redesign .buttons-pad a.save {
            color: #fff;
            margin-left: 10px;
            background-color: #EF3829;
        }

        #signature-pad-redesign .sign-here {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            text-align: center;
        }

        #signature-pad-redesign .sign-here .lines {
            border: 1px dashed;
            width: 50%;
            margin: auto;
            margin-bottom: 12px;
            color: #888;
        }

        [tnd-validate-form] label {
            font-weight: 500;
        }

        #signature-pad-redesign .buttons-pad a.save.active{
            color: #44AF69;
            border: 1px solid;
            background-color: #fff;
        }

        #signature-pad-redesign.active .sign-here{
            display: none;
        }

        #signature-pad-redesign.active .buttons-pad a {
            opacity: 1;
        }

        a.btn-flat:not(.disabled):hover, a.btn-flat.active{
            color: inherit !important;
        }

    </style>
    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/signature_pad.min.js') }}"></script>
    <script src="{{ asset('library/fancybox/jquery.fancybox.min.js') }}"></script>
    {% include 'DayscriptTiendaClaroBundle:Portabilidad/Landing:script-createLandingV2.html.twig' %}
